#include<stdio.h>
#include<windows.h>
#include<conio.h>
int i,j;
char map[9][12]={
	{"*#*********"},
	{"***###*###*"},
	{"###**#****#"},
	{"*#**###**#*"},
	{"***********"},
	{"#####*##*##"},
	{"**#*****#*E"},
	{"***#*###**#"},
	{"*#*********"},
};
void print_map()
{
	for( i=0;i<9;i++)
{
	puts(map[i]);}
}
void show_cursor(int x,int y)
{
	COORD pos;
pos.X=x;
pos.Y=y;
printf("curX=%d,curY=%d\n",x,y);
}
int curX,curY;
void main()
{
	while(1){
system("cls");
print_map();
show_cursor(curX,curY);
char t=getch();
if(t=='w')
{
	if((curY-1)>=0 && (map[curY-1][curX]=='*' || map[curY-1][curX]=='E'))
		curY--; 
}
else if (t=='s')
{
	if((curY+1)<9 && (map[curY+1][curX]=='*' || map[curY+1][curX]=='E'))
		curY++; 
}
 else if(t=='a') 
 {
	 if((curX-1)>=0 && (map[curY][curX-1]=='*' || map[curY][curX-1]=='E'))
	 curX--;
}
else if (t=='d')
{
	if((curX+1)<12 && (map[curY][curX+1]=='*' || map[curY][curX+1]=='E'))
		curX++; 
}
if (map[curY][curX]=='E')
{
break;  }
	
	}
}
